{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "checkJs": true,
    "moduleResolution": "bundler",
    "lib": ["ES2020", "DOM"],
    "types": ["chrome", "firefox-webext-browser", "web", "node"],
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.js",
    "src/**/*.d.ts",
    "build.mjs",
    "build.config.mjs"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "safari"
  ]
}

